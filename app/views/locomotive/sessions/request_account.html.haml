- content_for :head_title do
  Register to view the site

- title "Request an Account"


= semantic_form_for(Locomotive::Message.new) do |f|
  .inner
    %br
    %p.errors{style: 'color:red;'}
      = flash[:alert]
    %p.explanations
      Fill out your information and we'll get in touch with you with account information.

    = f.inputs do
      = f.input :first_name, label: "First Name", required: true
      = f.input :last_name, label: "Last Name", required: true
      = f.input :email, label: "Email", required: true
      = f.input :phone, label: "Phone", required: true
      = f.input :brokerage, label: "Brokerage", required: false
      %li#locomotive_account_brokerage_input.string.input.optional.stringish
        %label.label{:for => "locomotive_account_brokerage"} Additional Notes
        = f.text_area :additional_notes, label: "Additional Notes", style:'width: 100%', required: false
      %li#locomotive_account_brokerage_input.string.input.optional.stringish
        = submit_tag "Submit"

      
.footer

